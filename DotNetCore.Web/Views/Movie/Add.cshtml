@model DotNetCore.Models.Movie

<div class="container">
    <form asp-action="Add">
        <input type="hidden" asp-for="CinemaId" />
        <div class="form-group row">
            <label asp-for="Name" class="col-sm-2 col-form-label">电影名称</label>
            <div class="col-sm-10">
                <input type="text" asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Starring" class="col-sm-2 col-form-label">主演</label>
            <div class="col-sm-10">
                <input type="text" asp-for="Starring" class="form-control" />
                <span asp-validation-for="Starring" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="ReleaseDate" class="col-sm-2 col-form-label">发布日期</label>
            <div class="col-sm-10">
                <input type="date" asp-for="ReleaseDate" class="form-control" />
                <span asp-validation-for="ReleaseDate" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-10 offset-sm-2">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </div>
    </form>
    <div class="form-group row">
        <a asp-action="Index" asp-route-cinemaId="@Model.CinemaId">回到列表</a>
    </div>
</div>


